<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/border">

    <include
        android:id="@+id/tv_team_title"
        layout="@layout/common_vh_item_match_score_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        />
    <include
        android:id="@+id/tv_team_quarter_score_1"
        layout="@layout/common_vh_item_match_score_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />
    <include
        android:id="@+id/tv_team_quarter_score_2"
        layout="@layout/common_vh_item_match_score_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />
    <include
        android:id="@+id/tv_team_quarter_score_3"
        layout="@layout/common_vh_item_match_score_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />
    <include
        android:id="@+id/tv_team_quarter_score_4"
        layout="@layout/common_vh_item_match_score_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />
    <include
        android:id="@+id/tv_team_final_score"
        layout="@layout/common_vh_item_match_score_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />
</LinearLayout>